@model CreateDebitModel
<div class="container py-2">
<div class="row pt-12 border">
    <div >
        <form  class="row"  method="post" asp-action="DebitIndex">
            <div class="border col-12">
                    <h2>Add Debit From Bank</h2>
                    
            </div>

            <div class=" py-2 col-12">
                    <label>Amount</label>

                    <input type="number" class="form-control" aria-required="true" asp-for="Amount" />
               
                <span asp-validation-for="Amount"  class="text-danger"></span>
            </div>
            
            <div class="col-lg-3 col-sm-6 py-4">
                <label for="startDate">Date</label>
                <input  asp-for="Date"  class="form-control" type="date" />
                <span asp-validation-for="Date"></span>
            </div>



                <div class="row  pb-2 ">
                    
                        <div class="col-12 col-md-6 pb-1">
                        <button type="submit" class="btn btn-primary form-control " style="height:50px;" >Add</button>
                        </div>
                        <div class="col-12 col-md-6 pb-1">
                        <a asp-controller="Home" asp-action="Index" value="Add to Cart" class="btn btn-outline-secondary form-control" style="height:50px;">Back to Home</a>
                        </div>
                    
            </div>
      
        </form>
    </div>
</div>
</div>